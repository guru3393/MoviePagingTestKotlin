<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="VerticalMovieDetailsStandardTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/standard_margin_size</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/standard_text_size</item>
    </style>

    <style name="HorizontalMovieDetailsStandardTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/standard_margin_size</item>
        <item name="android:textColor">@color/colorLightGrey</item>
        <item name="android:textSize">@dimen/standard_tablet_text_size</item>
    </style>
</resources>